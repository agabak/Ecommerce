{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=Ecom-Order;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "ProducerSettings": {
    "BootstrapServers": "localhost:9092",
    "Acks": "all",
    "MessageSendMaxRetries": 3,
    "RetryBackoffMs": 1000,
    "EnableIdempotence": true,
    "ClientId": "ecom-client",
    "LingerMs": 5
  },
  "ConsumerSettings": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "ecom-client-group",
    "AutoOffsetReset": "earliest",
    "EnableAutoCommit": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
